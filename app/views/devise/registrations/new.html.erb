<h1><%= t('.sign_up') %></h1>

<div class="login-form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="box-nickname">
      <div class="column-left">
        <%= f.label :nickname, 'ニックネーム' %><br />
      </div>
      <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", required: true %>
    </div>

    <div class="box-email">
      <div class="column-left">
        <%= f.label :email %><br />
      </div>
      <%= f.email_field :email, autocomplete: "email", required: true %>
    </div>

    <!-- <span>OAtuh 認証の場合はパスワードを入力しなくても登録できます</span> -->

    <!-- <div class="box-password">
      <div class="column-left">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
        <% end %><br />
      </div>
      <%= f.password_field :password, autocomplete: "new-password", optional: true %>
    </div>

    <div class="box-password-confirmation">
      <div class="column-left">
        <%= f.label :password_confirmation %><br />
      </div>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div> -->

    <div class="box-login">
      <div class="actions">
        <%= f.submit t('.sign_up') %>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

<style media="screen">
  body{
    background-color: #efede8;
  }
</style>
