<h1>My Albums</h1>
<% if user_signed_in? %>
  <%= current_user.email %>
  <%= link_to 'ログアウト', logout_path %>
  <div>
    <div>
      <%= form_with(model: @album_form, url: albums_path) do |form| %>
        <%= form.text_field :name %>
        <%= form.file_field :pictures, :multiple => true %>
        <%= form.submit "登録"%>
      <% end %>
    </div>
    <div>
      <%= render @albums %>
    </div>
  </div>
<% end %>
