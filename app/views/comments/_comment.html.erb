<div id="comment-<%= comment.id %>" class="comments">
  <span class="commenter"><%= comment.user.nickname %></span>
  <span class="comment-content"><%= comment.content %></span>
  <% if comment.commenter?(current_user) %>
    <%= link_to comment_path(id: comment.id),class: 'comment-delete', method: :delete, remote: true, data: { confirm: '削除してよろしいですか？' }  do %>
      <i class="fas fa-trash-alt"></i>
    <% end %>
  <% end %>
  <p class="comment-date"><%= comment.created_at.strftime('%Y/%m/%d %H:%M:%S') %></p>
</div>
